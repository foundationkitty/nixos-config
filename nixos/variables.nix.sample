{ lib, ... }:

{
  options = {

        bootDevice = lib.mkOption {
            type = lib.types.str;
            default = "/dev/sda";
        };

        bootLoaderTimeout = lib.mkOption {
            type = lib.types.int;
            default = 5;
        };

        fullUser = lib.mkOption {
            type = lib.types.str;
            default = "User";
        };

        gps-device = lib.mkOption {
            type = lib.types.str;
            default = "/dev/ttyS2";
        };

       gps-device-args =  lib.mkOption {
            type = lib.types.listOf(lib.types.str);
            default = [ "-p" "-s" "4800" ];
        };

       graphicsPCI =  lib.mkOption {
            type = lib.types.str;
            default = "10de:xxxx";
        };

       graphicsAudioPCI =  lib.mkOption {
            type = lib.types.str;
            default = "10de:xxxx";
        };

        hostname = lib.mkOption {
            type = lib.types.str;
            default = "myhostname";
        };

        lat = lib.mkOption {
            type = lib.types.float;
            default = 51.5;
        };

        long = lib.mkOption {
            type = lib.types.float;
            default = -0.1;
        };

        locale = lib.mkOption {
            type = lib.types.str;
            default = "en_US.UTF-8";
        };

        stateVersion = lib.mkOption {
            type = lib.types.str;
            default = "25.11";
        };

        swapSize = lib.mkOption {
            type = lib.types.int;
            default = 8192;
        };

        timezone = lib.mkOption {
            type = lib.types.str;
            default = "UTC";
        };

        user = lib.mkOption {
            type = lib.types.str;
            default = "user";
        };

  };
}

